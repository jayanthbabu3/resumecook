# =============================================================================
# ResumeCook Frontend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your own values
# NEVER commit your actual .env file to version control!
# =============================================================================
# Note: Backend is deployed separately from resumecook-backend repository
# =============================================================================

# =============================================================================
# FRONTEND VARIABLES (Vercel/Cloudflare)
# Variables with VITE_ prefix are exposed to the browser
# =============================================================================

# -----------------------------------------------------------------------------
# Firebase Configuration (Required for authentication)
# Get these from: https://console.firebase.google.com > Project Settings
# -----------------------------------------------------------------------------
VITE_FIREBASE_API_KEY="your-firebase-api-key"
VITE_FIREBASE_APP_ID="your-firebase-app-id"
VITE_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
VITE_FIREBASE_MEASUREMENT_ID="G-XXXXXXXXXX"
VITE_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
VITE_FIREBASE_PROJECT_ID="your-project-id"
VITE_FIREBASE_STORAGE_BUCKET="your-project.firebasestorage.app"

# -----------------------------------------------------------------------------
# Supabase Configuration (Optional - for additional features)
# Get these from: https://supabase.com > Project Settings > API
# -----------------------------------------------------------------------------
VITE_SUPABASE_PROJECT_ID="your-supabase-project-id"
VITE_SUPABASE_PUBLISHABLE_KEY="your-supabase-anon-key"
VITE_SUPABASE_URL="https://your-project.supabase.co"

# -----------------------------------------------------------------------------
# Backend API Configuration
# Local development: http://localhost:8080
# Production: https://resumecook-api-70255328091.us-central1.run.app
# -----------------------------------------------------------------------------
VITE_API_BASE_URL="http://localhost:8080"
VITE_API_KEY="your-api-key-for-backend-authentication"

# -----------------------------------------------------------------------------
# Stripe Configuration (Optional - if using Stripe)
# Get from: https://dashboard.stripe.com/apikeys
# Note: Only use publishable key on frontend (starts with pk_)
# -----------------------------------------------------------------------------
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxx"
